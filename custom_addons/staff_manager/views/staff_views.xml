<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Staff Tree View -->
    <record id="view_staff_tree" model="ir.ui.view">
        <field name="name">staff.manager.staff.tree</field>
        <field name="model">staff.manager.staff</field>
        <field name="arch" type="xml">
            <list string="Nhân Viên">
                <field name="employee_code"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="department"/>
                <field name="area"/>
                <field name="total_calls"/>
                <field name="answered_calls"/>
                <field name="unanswered_calls"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Staff Form View -->
    <record id="view_staff_form" model="ir.ui.view">
        <field name="name">staff.manager.staff.form</field>
        <field name="model">staff.manager.staff</field>
        <field name="arch" type="xml">
            <form string="Nhân Viên">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group name="basic_info" string="Thông tin cơ bản">
                            <field name="employee_code"/>
                            <field name="name"/>
                            <field name="phone"/>
                        </group>
                        <group name="work_info" string="Thông tin công việc">
                            <field name="department"/>
                            <field name="area"/>
                        </group>
                    </group>
                    <group name="statistics" string="Thống kê cuộc gọi">
                        <group>
                            <field name="total_calls"/>
                            <field name="answered_calls"/>
                            <field name="unanswered_calls"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="call_logs" string="Lịch sử cuộc gọi">
                            <field name="call_log_ids">
                                <list string="Cuộc gọi" create="0">
                                    <field name="call_time"/>
                                    <field name="status"/>
                                    <field name="duration"/>
                                    <field name="response_key"/>
                                    <field name="record_url"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Staff Search View -->
    <record id="view_staff_search" model="ir.ui.view">
        <field name="name">staff.manager.staff.search</field>
        <field name="model">staff.manager.staff</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm nhân viên">
                <field name="employee_code"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="department"/>
                <field name="area"/>
                <filter string="Có cuộc gọi" name="has_calls" domain="[('total_calls', '>', 0)]"/>
                <filter string="Chưa có cuộc gọi" name="no_calls" domain="[('total_calls', '=', 0)]"/>
                <separator/>
                <filter string="Hoạt động" name="active" domain="[('active', '=', True)]"/>
                <filter string="Đã lưu trữ" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Phòng ban" name="group_department" context="{'group_by': 'department'}"/>
                    <filter string="Khu vực" name="group_area" context="{'group_by': 'area'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Staff Action -->
    <record id="action_staff" model="ir.actions.act_window">
        <field name="name">Nhân viên</field>
        <field name="res_model">staff.manager.staff</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_staff_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo nhân viên đầu tiên
            </p>
            <p>
                Bấm vào nút Tạo để thêm nhân viên mới vào hệ thống.
            </p>
        </field>
    </record>
</odoo>

